{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "tsx src/db/migrate.ts",
    "migrate:down": "tsx src/db/migrate.ts down",
    "migrate:make": "kysely migrate:make",
    "migrate:latest": "kysely migrate:latest",
    "migrate:rollback": "kysely migrate:rollback",
    "migrate:list": "kysely migrate:list",
    "db:generate-types": "kysely-codegen --out-file src/db/generated-types.ts",
    "db:migrate-and-generate": "npm run migrate && npm run db:generate-types"
  },
  "dependencies": {
    "@hono/node-server": "1.19.3",
    "@hono/zod-openapi": "1.1.2",
    "bcrypt": "^6.0.0",
    "hono": "4.9.8",
    "kysely": "0.28.7",
    "minio": "^8.0.4",
    "pg": "^8.16.3",
    "zod": "4.1.9"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/minio": "^7.1.1",
    "@types/node": "24.5.2",
    "@types/pg": "^8.15.5",
    "dotenv": "^17.2.2",
    "kysely-codegen": "^0.19.0",
    "kysely-ctl": "^0.19.0",
    "tsx": "4.20.5",
    "typescript": "^5.8.3"
  }
}
